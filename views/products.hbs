        <div class="container">
            <h2 class="mb-4">My Products</h2>
            {{#if products.length}}
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3 mb-5">
            {{#each products}}
                <div class="col-sm-12 col-md-6 col-lg-4">
                    <div class="card shadow-sm">
                        <div class="card-head card-img-wrapper">
                            <img src="{{image}}" class="card-img-top product-img" alt="{{title}} product image">
                        </div>
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <p class="text-muted">{{formatDate createdAt}}</p>
                                <p class="fw-semibold text-end text-muted fw-semibold fst-italic">{{price}}.00 $</p>
                            </div>
                            <h3 class="card-text fs-5 fs-lg-4 fw-semibold mb-3">{{title}}</h3>
                            <p class="card-text">{{description}}</p>
                        </div>
                        <div class="card-footer">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group btn-group-sm" role="group" aria-label="Small button group">
                                    <a href="product/{{_id}}" type="button" class="btn btn-outline-secondary">Detail</a>
                                    <a href="edit-product/{{_id}}" type="button" class="btn btn-outline-success">Edit</a>
                                    <form class="btn btn-outline-danger" action="delete-product/{{_id}}" method="post">
                                        <button type="submit" class="p-0 p-0 border-0 bg-transparent text-muted">Delete</button>
                                    </form>
                                </div>
                                {{!-- <small class="text-muted">9 mins</small> --}}
                            </div>
                        </div>
                    </div>
                </div>
            {{/each}}
            </div>
            {{else}}
            <div class="container not-found-container">
                <img class="img-fluid" src="https://img.freepik.com/free-vector/no-data-concept-illustration_114360-536.jpg?w=2000" alt="Products not found image">
            </div>
            {{/if}}
        </div>