        <div class="container mb-4">
            <div class="row justify-content-between align-items-center">
                <div class="col-md-6">
                    <img class="login-gif form-img" width="100%" src="./images/login.gif" alt="Login gif">
                </div>
                <div class="col-md-6">
                    <h1 class="mb-4">Login</h1>
                    <div class="err-message__wrapper">
                    {{#if loginErr}}
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <strong>Error:</strong> {{loginErr}}
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    {{/if}}
                    </div>
                    <form novalidate action="./login" method="post" class="form needs-validation login-form">
                        <div class="form-floating mb-3">
                            <input type="email" name="email" class="form-control" id="email" placeholder="name@example.com" required>
                            <label for="email">Email address</label>
                            <div class="invalid-feedback">Please enter a valid email address</div>
                            <div class="valid-feedback">Good job</div>
                        </div>
                        <div class="password-wrapper">
                            <div class="form-floating">
                                <input type="password" name="password" class="form-control form-password" id="password" placeholder="Password" required>
                                <button onclick="passShowHide()" type="button" class="btn p-0 border-0">
                                    <i class="fa-solid fa-eye passShowHideIcon"></i>
                                </button>
                                <label for="password">Password</label>
                                <div class="invalid-feedback">Please enter a password</div>
                                <div class="valid-feedback">Good job</div>
                            </div>
                            
                        </div>
                        <button type="submit" class="btn btn-primary mt-4">Login</button>
                    </form>
                </div>
            </div>
        </div>